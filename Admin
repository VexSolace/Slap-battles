if game.PlaceId == 6403373529 then  -- Only runs in "Slap Battles"
    local player = game.Players.LocalPlayer
    local gui = Instance.new("ScreenGui")
    gui.Parent = player:WaitForChild("PlayerGui")
    gui.ResetOnSpawn = false  -- GUI stays on screen after respawning

    -- Create the main button
    local button = Instance.new("TextButton")
    button.Parent = gui
    button.Size = UDim2.new(0, 40, 0, 40)  -- 40x40 pixels
    button.Position = UDim2.new(0, 10, 1, -50)  -- Bottom-left corner
    button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)  -- Dark Grey
    button.Text = ""
    button.BorderSizePixel = 0
    button.AutoButtonColor = false

    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0.4, 0)  -- Rounded corners
    uiCorner.Parent = button

    -- Create the dropdown box (hidden by default)
    local dropdown = Instance.new("Frame")
    dropdown.Parent = gui
    dropdown.Size = UDim2.new(0, 160, 0, 300)  -- Increased height for new button
    dropdown.Position = UDim2.new(0, 55, 1, -310)  -- Adjusted position for size
    dropdown.BackgroundColor3 = Color3.fromRGB(30, 30, 30)  -- Even Darker Grey
    dropdown.Visible = false  -- Hidden initially

    local dropdownCorner = Instance.new("UICorner")
    dropdownCorner.CornerRadius = UDim.new(0.2, 0)  -- Slightly rounded corners
    dropdownCorner.Parent = dropdown

    -- Function to create a dropdown button
    local function createDropdownButton(parent, text, position, callback)
        local button = Instance.new("TextButton")
        button.Parent = parent
        button.Size = UDim2.new(0, 140, 0, 40)  -- 140x40 pixels
        button.Position = position  -- Dynamic position
        button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)  -- Medium Dark Grey
        button.Text = text
        button.TextColor3 = Color3.fromRGB(255, 255, 255)  -- White text
        button.BorderSizePixel = 0
        button.AutoButtonColor = true

        local corner = Instance.new("UICorner")
        corner.CornerRadius = UDim.new(0.3, 0)  -- Slightly rounded button
        corner.Parent = button

        button.MouseButton1Click:Connect(callback)  -- Connect button click to function

        return button
    end

    -- Create existing buttons
    createDropdownButton(dropdown, "Train", UDim2.new(0, 10, 0, 10), function()
        print("Train button pressed")
    end)

    createDropdownButton(dropdown, "Clone()", UDim2.new(0, 10, 0, 60), function()
        print("Clone button pressed")
    end)

    createDropdownButton(dropdown, "Ghost", UDim2.new(0, 10, 0, 110), function()
        print("Ghost button pressed")
    end)

    createDropdownButton(dropdown, "Minecraft", UDim2.new(0, 10, 0, 160), function()
        print("Minecraft button pressed")
    end)

    -- Create "Edgelord" button
    createDropdownButton(dropdown, "Edgelord", UDim2.new(0, 10, 0, 210), function()
        print("IN DEVELOPMENT ")  -- Prints message in the developer console
    end)

    -- Toggle dropdown visibility when main button is clicked
    button.MouseButton1Click:Connect(function()
        dropdown.Visible = not dropdown.Visible
    end)
else
    game.Players.LocalPlayer:Kick("Only Works in Slap Battles.")
end
